@model BlueBadge.Models.Post.PostDetail

@{
    ViewBag.Title = "Delete";
}

<div class="jumbotron" style="background-color:#d92929;">
    <p class="lead">
        <h3 style="text-align: center">Are you sure you want to delete this Artist?</h3>
        <h3 style="text-align: center">This cannot be undone once you hit the delete button below.</h3>
       
    </p>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color" style="text-align: center; padding: 1em 1em;">
            <input type="submit" value="Delete" class="btn btn-warning btn-lg" />
        </div>
    }
</div>



<div class="container" style="background-color:rgba(255, 255, 255, 0.15); border: 5px outset white;">

    <div class="row" style="margin: 1.5em 0 0 0;">

        <div class="col" style="text-align:center;">
            <h4> Current Photo</h4>
            @if (Model.Files.Any(ff => ff.FileType == BlueBadge.Data.FileType.Picture))
            {
                <img src="~/File?id=@Model.Files.First(f => f.FileType == BlueBadge.Data.FileType.Picture).PhotoId" />
            }
            else
            {
                <img src="~/Content/assets/NOPHOTO.jpg" />
            }
        </div>

        <div class="col" style="margin: auto auto;">
            <h4> Current Post</h4>
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.Title)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Title)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Artist.ArtistName)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Artist.ArtistName)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.TattooDetails)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.TattooDetails)
                </dd>
            </dl>
        </div>
    </div>
    <div style="text-align: right; padding: 0 0 1em 0;">
        @Html.ActionLink("Back to List", "Index", "Post", routeValues: null, htmlAttributes: new { @class = "btn btn-light" })
    </div>

</div>

<style>
    img {
        height: 350px;
        width: 350px;
        -webkit-box-shadow: 16px 16px 10px 0px rgba(39,39,46,1);
        -moz-box-shadow: 16px 16px 10px 0px rgba(39,39,46,1);
        box-shadow: 16px 16px 10px 0px rgba(39,39,46,1);
    }
</style>