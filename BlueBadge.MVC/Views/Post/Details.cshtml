@model BlueBadge.Models.Post.PostDetail

@{
    ViewBag.Title = "Details";
}

<div class="container" style="margin: 1em 0 0 0;">
    <div class="row">
        <div class="col">
            @if (Model.Files.Any(ff => ff.FileType == BlueBadge.Data.FileType.Picture))
            {
                <p>
                    <img src="~/File?id=@Model.Files.First(f => f.FileType == BlueBadge.Data.FileType.Picture).PhotoId" alt="avatar" />
                </p>
            }
            else
            {
                <img src="~/Content/assets/NOPHOTO.jpg" />
            }
        </div>

        <div class="col"style="margin: auto auto;">
            <dl class="dl-horizontal" >
                <dt>
                    @Html.DisplayNameFor(model => model.Title)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Title)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Artist.ArtistName)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Artist.ArtistName)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.TattooDetails)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.TattooDetails)
                </dd>

            </dl>
        </div>

    </div>
</div>

<p style="text-align:right;">
    @Html.ActionLink("Edit", "Edit", new { id = Model.PostID },  htmlAttributes: new { @class = "btn btn-light" }) |
    @Html.ActionLink("Back to List", "Index", routeValues: null, htmlAttributes: new { @class = "btn btn-light" })
</p>

<style>
    img {
        max-height: 65%;
        max-width: 65%;
        -webkit-box-shadow: 16px 16px 10px 0px rgba(39,39,46,1);
        -moz-box-shadow: 16px 16px 10px 0px rgba(39,39,46,1);
        box-shadow: 16px 16px 10px 0px rgba(39,39,46,1);
    }
    dt {
       font-size: 2em;
    }
    dd {
        border-bottom: solid white;
    }
</style>
