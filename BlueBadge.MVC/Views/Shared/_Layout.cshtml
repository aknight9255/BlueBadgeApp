<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - TatTrack</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>

<body style="background-image: url(https://images.unsplash.com/photo-1520985244272-9d0b8067a4ff?ixlib=rb-1.2.1&auto=format&fit=crop&w=1824&q=80); color:#F5F3F4; background-size: cover; background-repeat: no-repeat;">

    <nav class="navbar navbar-expand-lg navbar-light bg-light fixed-top" id="NAV">
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                    <a @Html.ActionLink("Home", "Index", "Home", routeValues: null, htmlAttributes: new { @class = "btn btn-outline-info" })> </a>
                </li>
                <li class="nav-item"> 
                    <a @Html.ActionLink("About", "About", "Home", routeValues: null, htmlAttributes: new { @class = "btn btn-outline-info" })> </a>
                </li>

                @if (User.Identity.IsAuthenticated)
                {
                    <li class="nav-item">
                        <a @Html.ActionLink("Posts", "Index", "Post", routeValues: null, htmlAttributes: new { @class = "btn btn-outline-info" })> </a>
                    </li>
                }
                <li class="nav-item">
                    <a @Html.ActionLink("Artists", "Index", "Artist", routeValues: null, htmlAttributes: new { @class = "btn btn-outline-info" })> </a>
                </li>
                <li class="nav-item">
                    <a @Html.ActionLink("Shops", "Index", "Shop", routeValues: null, htmlAttributes: new { @class = "btn btn-outline-info" })> </a>
                </li>
            </ul>
            @Html.Partial("_LoginPartial")
        </div>
    </nav>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - TatTrack</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>

