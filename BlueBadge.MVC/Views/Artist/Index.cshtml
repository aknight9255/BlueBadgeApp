@model IEnumerable<BlueBadge.Models.ArtistListItem>

@{
    ViewBag.Title = "Index";
}

<h2>Artist Library</h2>

@if (TempData.ContainsKey("SaveResult"))
{
    <div class="alert alert-success fade in" role="alert">

        <button type="button" class="close" data-dismiss="alert">
            <span>&times;</span>
        </button>
        @TempData["SaveResult"]
    </div>
}
<table class="table" style="background-color:rgba(255, 255, 255, 0.84); border: solid white;">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ArtistName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ArtistContact)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr style="border: solid white;">
            <td>
                @Html.DisplayFor(modelItem => item.ArtistName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ArtistContact)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.ArtistID }) |
                @Html.ActionLink("Details", "Details", new { id = item.ArtistID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.ArtistID })
            </td>
        </tr>
    }

</table>


