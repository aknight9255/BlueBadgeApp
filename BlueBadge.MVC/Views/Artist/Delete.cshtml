                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.ArtistContact)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.ArtistContact)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Shop.ShopName)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Shop.ShopName)
                </dd>
            </dl>
        </div>
    </div>
    <div style="text-align: right; padding: 0 0 1em 0;">
        @Html.ActionLink("Back to List", "Index", "Artist", routeValues: null, htmlAttributes: new { @class = "btn btn-light" })
    </div>

</div>

