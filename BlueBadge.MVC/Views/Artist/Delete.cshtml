@model BlueBadge.Models.ArtistDetails

@{
    ViewBag.Title = "Delete";
}


    <div class="jumbotron" style="background-color:#d92929;">
        <p class="lead">
            <h3 style="text-align: center">Are you sure you want to delete this Artist?</h3>
            <h3 style="text-align: center">This cannot be undone once you hit the delete button below.</h3>
            <h3 style="text-align: center">This will also delete any post that the artist is connected to.</h3>
        </p>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color" style="text-align: center; padding: 1em 1em;">
                <input type="submit" value="Delete" class="btn btn-warning btn-lg" />
            </div>
        }
    </div>





<div class="container" style="background-color:rgba(255, 255, 255, 0.15); border: 5px outset white;">

