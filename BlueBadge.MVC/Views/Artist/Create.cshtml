@model BlueBadge.Models.ArtistCreate

@{
    ViewBag.Title = "Create";
}

<h1 style="text-align:center;">Who was your artist?</h1>

<div class="card" style="background-color:rgba(255, 255, 255, 0.84);">
    <div class="card-header" style="color:#076776;">
        <p>Instructions</p>
        <ul>
            <li>If the artist does not work at a shop please use the freelance option. </li>
            <li>If you do not wish to add a new artist after all click "Jump to Add Post Screen" to continue.</li>
            <li>If there is information that you do not have on hand please add "NA". You will have the chance to edit later on.</li>
        </ul>
    </div>

    <div class="card-body">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal" style="color: #076776;">
                <h4>Add New Artits</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(model => model.ArtistName, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.ArtistName, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.ArtistName, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.ArtistContact, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.ArtistContact, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.ArtistContact, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.ShopID, "Shop Name", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownList("ShopID", null, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.ShopID, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Add New Artist" class="btn btn-secondary" />
                    </div>
                </div>
            </div>
        }

        <footer class="card-footer text-muted" style="text-align:right;">
            <div>
                @Html.ActionLink("Jump to Add Post Screen", "Create", "Post", routeValues: null, htmlAttributes: new { @class = "btn btn-outline-info" }) |
                @Html.ActionLink("Return to Upload Options", "Main", "Post", routeValues: null, htmlAttributes: new { @class = "btn btn-outline-info" })
            </div>
        </footer>

    </div>

</div>
<style>

    h4 {
        color: #076776;
    }
</style>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}