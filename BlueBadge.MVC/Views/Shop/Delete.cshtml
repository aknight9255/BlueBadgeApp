@model BlueBadge.Models.ShopDetails

@{
    ViewBag.Title = "Delete";
}

<div class="jumbotron" style="background-color:#d92929;">
    <p class="lead">
        <h3 style="text-align: center">Are you sure you want to delete this shop?</h3>
        <h3 style="text-align: center">This cannot be undone once you hit the delete button below.</h3>
        <h3 style="text-align: center">This will also delete any post and artist that the shop is connected to.</h3>
    </p>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color" style="text-align: center; padding: 1em 1em;">
            <input type="submit" value="Delete" class="btn btn-warning btn-lg" />
        </div>
    }
</div>

<div class="container" style="background-color:rgba(255, 255, 255, 0.15); border: 5px outset white;">

    <div class="row" style="margin: 1.5em 0 0 0;">
        <div class="col" style="margin: auto auto;">
            <h4> Current Post</h4>
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.ShopName)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.ShopName)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.ShopUrl)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.ShopUrl)
                </dd>

            </dl>
        </div>
    </div>
    <div style="text-align: right; padding: 0 0 1em 0;">
        @Html.ActionLink("Back to List", "Index", "Shop", routeValues: null, htmlAttributes: new { @class = "btn btn-light" })
    </div>

</div>



