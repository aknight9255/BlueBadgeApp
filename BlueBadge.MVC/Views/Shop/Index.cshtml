@model IEnumerable<BlueBadge.Models.ShopListItem>

@{
    ViewBag.Title = "Index";
}

<div class="container" style="text-align:center; border: 5px outset white; background-color:rgba(255, 255, 255, 0.15);">

    <div class="row">
        <div class="col">
            <h2 style="margin: 1em 1em;padding:.5em;">Active Tattoo Shops</h2>
        </div>
    </div>

    <div class="row">
        <div class="col">
            <p>@Html.ActionLink("Back to Tattoo Library", "Index", "Post", routeValues: null, htmlAttributes: new { @class = "btn btn-light" })</p>
        </div>
    </div>
    @if (TempData.ContainsKey("SaveResult"))
    {
        <div class="alert alert-success fade in" role="alert">

            <button type="button" class="close" data-dismiss="alert">
                <span>&times;</span>
            </button>
            @TempData["SaveResult"]
        </div>
    }
    <table class="table" style="background-color:rgba(255, 255, 255, 0.84); border: solid white;">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ShopName)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr style="border: solid white;">
                <td>
                    @Html.DisplayFor(modelItem => item.ShopName)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.ShopID }) |
                    @Html.ActionLink("Details", "Details", new { id = item.ShopID }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.ShopID })
                </td>
            </tr>
        }

    </table>
</div>
